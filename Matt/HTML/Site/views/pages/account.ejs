<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <%- include('../partials/head') %>
</head>
<body id="grad">

<header>
    <%- include('../partials/header') %>
</header>


<div class="container">

    <div class="page-header page-title">
        <h1 class="title" id="page-title">Account</h1>
    </div>
    <h3 id="page-text" class="text-center waypoint">Now that you've learnt all about the different algorithms we can
    use, why not test yourself?</h3>

    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 waypoint">
            <div class="jumbotron" id="jumbo-test">
                <a href="/testbubble" class="btn btn-warning btn-lg" id="sort-buttons" role="button">Bubble Sort</a>
                <!-- The table class adds nice spacing and the other classes add additional style -->
                <!-- bordered = border, table-striped = adds striped, can be modified in css,
                hover = highlights cells which are hovered over -->
                <table class="table table-bordered">
                    <thead class = "text-center">
                    <tr>
                        <td colspan="2" class="table-title">Previous Attempts</td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th class="text-center">Score</th>
                        <th class="text-center">Date Completed</th>
                    </tr>
                    <% if (login == false){ %>
                        <% console.log("hi") %>
                    <% } %>
                    <% if(typeof scores != "undefined"){ %>
                        <% var count = 0 %>
                         <% scores.forEach(function(score){ %>
                         <% if (score.testID == 1) {%>
                            <% count = count + 1 %>
                            <tr>
                                <td><%=score.score %></td>
                                <td class ="text-right"><%= score.timeCompleted %></td>
                            </tr>
                            <% }%>
                            <% }); %>
                        <% if(count == 0) { %>
                            <td colspan="2" class="text-left"> You have no previous attempts</td>
                        <% } %>
                    <%} %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 waypoint">
            <div class="jumbotron" id="jumbo-test">
                <a href="/testmerge" class="btn btn-warning btn-lg" id="sort-buttons" role="button">Merge Sort</a>
                <table class="table table-bordered">
                <thead class = "text-center">
                <tr>
                    <td colspan="2" class="table-title">Previous Attempts</td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th class="text-center">Score</th>
                    <th class="text-center">Date Completed</th>
                </tr>
                <% if(typeof scores != "undefined"){ %>
                    <% var count = 0 %>
                     <% scores.forEach(function(score){ %>
                     <% if (score.testID == 2) {%>
                        <% count = count + 1 %>
                        <tr>
                            <td><%=score.score %></td>
                            <td class ="text-right"><%= score.timeCompleted.substring(0, 19) %></td>
                        </tr>
                        <% }%>
                        <% }); %>
                    <% if(count == 0) { %>
                        <td colspan="2" class="text-left"> You have no previous attempts</td>
                    <% } %>
                <%} %>


                </tbody>
            </table>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 waypoint">
            <div class="jumbotron" id="jumbo-test">
                <a href="/testquick" class="btn btn-warning btn-lg" id="sort-buttons" role="button">Quick Sort</a>
                <table class="table table-bordered">
                <thead class = "text-center">
                <tr>
                    <td colspan="2" class="table-title">Previous Attempts</td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th class="text-center">Score</th>
                    <th class="text-center">Date Completed</th>
                </tr>
                <% if(typeof scores != "undefined"){ %>
                    <% var count = 0 %>
                     <% scores.forEach(function(score){ %>
                     <% if (score.testID == 3) {%>
                        <% count = count + 1 %>
                        <tr>
                            <td><%=score.score %></td>
                            <td class ="text-right"><%= score.timeCompleted %></td>
                        </tr>
                        <% }%>
                        <% }); %>
                    <% if(count == 0) { %>
                        <td colspan="2" class="text-left"> You have no previous attempts</td>
                    <% } %>
                <%} %>
                </tbody>
            </table>
            </div>
        </div>
    </div>

</div>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>